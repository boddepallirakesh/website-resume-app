  <script>
    document.getElementById('downloadButton').addEventListener('click', function() {
      const { jsPDF } = window.jspdf;
      var pdf = new jsPDF('p', 'mm', 'a4');
      var imgWidth = 210; // A4 width in mm
      
      // Capture Page 1
      html2canvas(document.getElementById('page1'), { scale: 2 }).then(canvas1 => {
        var imgData1 = canvas1.toDataURL('image/png');
        var imgHeight1 = canvas1.height * imgWidth / canvas1.width;
        pdf.addImage(imgData1, 'PNG', 0, 0, imgWidth, imgHeight1);
        
        // Capture Page 2
        html2canvas(document.getElementById('page2'), { scale: 2 }).then(canvas2 => {
          var imgData2 = canvas2.toDataURL('image/png');
          var imgHeight2 = canvas2.height * imgWidth / canvas2.width;
          pdf.addPage();
          pdf.addImage(imgData2, 'PNG', 0, 0, imgWidth, imgHeight2);
          
          // Save PDF with exactly two pages
